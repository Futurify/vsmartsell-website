---
import BaseLayout from '../layouts/BaseLayout.astro';

const features = [
  {
    title: 'Quản lý theo đơn vị chính xác',
    desc: 'Hỗ trợ đầy đủ các đơn vị: cuộn, tấm, mét dài, kg. Quy đổi tự động giữa các đơn vị, không còn phải tính nhẩm hay tra bảng.',
    icon: 'ruler',
  },
  {
    title: 'Kiểm soát tỉ trọng',
    desc: 'Nhập tỉ trọng cho từng loại tôn. Hệ thống tự động tính trọng lượng dựa trên kích thước, giúp kiểm soát chính xác khi xuất hàng theo kg.',
    icon: 'weight',
  },
  {
    title: 'Quản lý hao hụt',
    desc: 'Theo dõi hao hụt trong quá trình cắt xẻ. So sánh trọng lượng thực tế và lý thuyết, phát hiện ngay chênh lệch bất thường.',
    icon: 'alert',
  },
  {
    title: 'Xẻ khổ linh hoạt',
    desc: 'Hỗ trợ xẻ cuộn tôn thành nhiều khổ khác nhau. Tự động tính toán số lượng tấm, trọng lượng từng khổ và cập nhật tồn kho.',
    icon: 'cut',
  },
  {
    title: 'Bán theo chiều rộng',
    desc: 'Bán tôn theo chiều rộng tùy chỉnh cho từng khách hàng. Hệ thống tính giá và trọng lượng tự động dựa trên khổ cắt.',
    icon: 'width',
  },
  {
    title: 'Kiểm kho cuộn tôn',
    desc: 'Kiểm kê theo từng cuộn, biết chính xác còn bao nhiêu mét, bao nhiêu kg. Không còn tình trạng tồn kho ảo.',
    icon: 'inventory',
  },
];

const painPoints = [
  'Tính nhẩm trọng lượng tôn thường sai, giao thiếu hoặc thừa cho khách',
  'Xẻ cuộn xong không biết còn bao nhiêu, tồn kho lệch lớn',
  'Nhân viên bán sai giá vì không biết quy đổi đơn vị',
  'Hao hụt trong cắt xẻ không được theo dõi, mất tiền mà không hay',
];
---

<BaseLayout
  title="Phần mềm quản lý Tôn Cuộn, Sắt Thép - vSmartSell"
  description="Phần mềm quản lý tôn cuộn chuyên sâu: xẻ khổ, tỉ trọng, hao hụt, bán theo chiều rộng. Kiểm soát tồn kho chính xác đến từng kg."
>
  <!-- Hero Section -->
  <section class="relative py-20 lg:py-32 overflow-hidden bg-gradient-to-br from-slate-900 via-blue-900 to-slate-900">
    <div class="absolute inset-0">
      <div class="absolute top-20 left-10 w-72 h-72 bg-blue-500 rounded-full mix-blend-multiply filter blur-3xl opacity-20 animate-pulse"></div>
      <div class="absolute bottom-20 right-10 w-96 h-96 bg-cyan-500 rounded-full mix-blend-multiply filter blur-3xl opacity-15 animate-pulse" style="animation-delay: 1s;"></div>
    </div>
    <div class="absolute inset-0 bg-[linear-gradient(rgba(255,255,255,0.03)_1px,transparent_1px),linear-gradient(90deg,rgba(255,255,255,0.03)_1px,transparent_1px)] bg-[size:40px_40px]"></div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div class="text-center lg:text-left">
          <span class="inline-block px-4 py-1 bg-orange-500/20 text-orange-300 border border-orange-400/30 rounded-full text-sm font-medium mb-6">Chuyên ngành Tôn, Sắt thép</span>

          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white leading-tight mb-6">
            Quản lý tôn cuộn
            <span class="block bg-gradient-to-r from-orange-400 to-yellow-400 bg-clip-text text-transparent pb-2">
              chính xác đến từng kg
            </span>
          </h1>

          <p class="text-lg md:text-xl text-slate-300 mb-8 max-w-xl mx-auto lg:mx-0">
            Phần mềm <strong class="text-white">duy nhất</strong> hỗ trợ xẻ khổ, quản lý tỉ trọng, hao hụt và bán theo chiều rộng — những tính năng mà không phần mềm bán hàng nào khác có.
          </p>

          <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
            <a href="/#dung-thu" class="group inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-white bg-gradient-to-r from-orange-500 to-yellow-500 rounded-xl shadow-lg shadow-orange-500/25 hover:shadow-orange-500/40 transition-all duration-300 hover:-translate-y-1">
              <span class="whitespace-nowrap">Dùng thử miễn phí</span>
              <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
              </svg>
            </a>
            <a href="tel:0866135766" class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-white border-2 border-white/20 rounded-xl hover:bg-white/10 transition-all duration-300">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              Gọi tư vấn
            </a>
          </div>
        </div>

        <div class="relative flex justify-center">
          <img
            src="/images/industry-tonsatthep.png"
            alt="Tôn cuộn sắt thép"
            class="rounded-2xl shadow-2xl max-h-[400px] object-cover"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Pain Points -->
  <section class="py-20 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          Những vấn đề mà <span class="text-red-500">chủ cửa hàng tôn thép</span> đều gặp
        </h2>
      </div>

      <div class="grid sm:grid-cols-2 gap-6">
        {painPoints.map((point) => (
          <div class="flex items-start gap-4 p-6 bg-red-50 rounded-xl border border-red-100">
            <svg class="w-6 h-6 text-red-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
            <p class="text-gray-700">{point}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Features -->
  <section class="py-20 bg-slate-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <span class="inline-block px-4 py-1 bg-orange-100 text-orange-700 rounded-full text-sm font-medium mb-4">Tính năng chuyên sâu</span>
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          vSmartSell hiểu ngành tôn thép
          <span class="bg-gradient-to-r from-orange-500 to-yellow-500 bg-clip-text text-transparent">hơn bất kỳ ai</span>
        </h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          Được xây dựng từ kinh nghiệm thực tế của hàng trăm cửa hàng tôn thép trên cả nước.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {features.map((feature) => (
          <div class="bg-white rounded-2xl p-8 shadow-sm border border-gray-100 hover:shadow-lg hover:-translate-y-1 transition-all duration-300">
            <div class="w-12 h-12 bg-orange-100 rounded-xl flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-2">{feature.title}</h3>
            <p class="text-gray-600 leading-relaxed">{feature.desc}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-20 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="relative bg-gradient-to-br from-orange-500 to-yellow-500 rounded-3xl p-8 md:p-12 overflow-hidden">
        <div class="absolute top-0 right-0 w-64 h-64 bg-white/10 rounded-full -translate-y-1/2 translate-x-1/2"></div>
        <div class="absolute bottom-0 left-0 w-48 h-48 bg-white/10 rounded-full translate-y-1/2 -translate-x-1/2"></div>
        <div class="relative z-10 text-center">
          <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">Sẵn sàng kiểm soát tồn kho tôn cuộn?</h2>
          <p class="text-lg text-white/90 mb-8 max-w-2xl mx-auto">Dùng thử miễn phí 15 ngày. Đội ngũ kỹ thuật sẽ hỗ trợ cài đặt và đào tạo 1-1.</p>
          <a href="/#dung-thu" class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-orange-600 bg-white rounded-xl hover:bg-gray-100 transition-all duration-300 hover:-translate-y-1 shadow-lg">
            <span class="whitespace-nowrap">Dùng thử miễn phí</span>
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
