---
import BaseLayout from '../layouts/BaseLayout.astro';

const features = [
  {
    title: 'Bán theo combo',
    desc: 'Tạo combo sản phẩm như bộ toilet + lavabo + vòi sen. Khi bán combo, hệ thống tự động trừ kho từng sản phẩm thành phần.',
  },
  {
    title: 'Không bỏ sót phụ kiện đi kèm',
    desc: 'Mỗi sản phẩm chính sẽ gợi ý danh sách phụ kiện đi kèm (co nối, van, ống nước...). Nhân viên bán hàng không bao giờ quên.',
  },
  {
    title: 'Trừ kho chính xác',
    desc: 'Bán combo hay bán lẻ, hệ thống đều trừ kho chính xác từng sản phẩm. Không còn tình trạng tồn kho lệch với thực tế.',
  },
  {
    title: 'Quản lý theo serial/mã sản phẩm',
    desc: 'Theo dõi từng sản phẩm bằng mã serial. Biết rõ sản phẩm nào đã bán cho ai, tiện cho bảo hành và đổi trả.',
  },
  {
    title: 'Báo giá combo chuyên nghiệp',
    desc: 'Tạo báo giá combo cho khách hàng dạng trọn gói nhà tắm, nhà bếp. Hiển thị giá combo và giá tiết kiệm được.',
  },
  {
    title: 'Quản lý bảo hành',
    desc: 'Theo dõi thời hạn bảo hành cho từng sản phẩm đã bán. Nhắc nhở khi sắp hết hạn, tăng uy tín với khách hàng.',
  },
];

const painPoints = [
  'Bán bồn cầu quên bán kèm co nối, khách phải quay lại mua thêm',
  'Tạo combo trên giấy, khi bán quên trừ kho một vài phụ kiện nhỏ',
  'Không biết sản phẩm nào bán cho ai, khi khách bảo hành không tra được',
  'Nhân viên mới không biết phụ kiện đi kèm từng sản phẩm, bán thiếu thường xuyên',
];
---

<BaseLayout
  title="Phần mềm quản lý Thiết Bị Vệ Sinh - vSmartSell"
  description="Phần mềm quản lý thiết bị vệ sinh: bán theo combo, quản lý phụ kiện đi kèm, trừ kho chính xác. Dùng thử miễn phí."
>
  <!-- Hero Section -->
  <section class="relative py-20 lg:py-32 overflow-hidden bg-gradient-to-br from-slate-900 via-blue-900 to-slate-900">
    <div class="absolute inset-0">
      <div class="absolute top-20 left-10 w-72 h-72 bg-sky-500 rounded-full mix-blend-multiply filter blur-3xl opacity-20 animate-pulse"></div>
      <div class="absolute bottom-20 right-10 w-96 h-96 bg-indigo-500 rounded-full mix-blend-multiply filter blur-3xl opacity-15 animate-pulse" style="animation-delay: 1s;"></div>
    </div>
    <div class="absolute inset-0 bg-[linear-gradient(rgba(255,255,255,0.03)_1px,transparent_1px),linear-gradient(90deg,rgba(255,255,255,0.03)_1px,transparent_1px)] bg-[size:40px_40px]"></div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div class="text-center lg:text-left">
          <span class="inline-block px-4 py-1 bg-sky-500/20 text-sky-300 border border-sky-400/30 rounded-full text-sm font-medium mb-6">Chuyên ngành Thiết bị vệ sinh</span>

          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white leading-tight mb-6">
            Bán combo thông minh,
            <span class="block bg-gradient-to-r from-sky-400 to-indigo-400 bg-clip-text text-transparent pb-2">
              không bỏ sót phụ kiện
            </span>
          </h1>

          <p class="text-lg md:text-xl text-slate-300 mb-8 max-w-xl mx-auto lg:mx-0">
            Tạo combo sản phẩm, tự động gợi ý phụ kiện đi kèm và <strong class="text-white">trừ kho chính xác</strong> từng sản phẩm. Không bao giờ quên bán kèm phụ kiện.
          </p>

          <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
            <a href="/#dung-thu" class="group inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-white bg-gradient-to-r from-sky-500 to-indigo-500 rounded-xl shadow-lg shadow-sky-500/25 hover:shadow-sky-500/40 transition-all duration-300 hover:-translate-y-1">
              <span class="whitespace-nowrap">Dùng thử miễn phí</span>
              <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
              </svg>
            </a>
            <a href="tel:0866135766" class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-white border-2 border-white/20 rounded-xl hover:bg-white/10 transition-all duration-300">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              Gọi tư vấn
            </a>
          </div>
        </div>

        <div class="relative flex justify-center">
          <img src="/images/industry-thietbivesinh.png" alt="Thiết bị vệ sinh" class="rounded-2xl shadow-2xl max-h-[400px] object-cover" />
        </div>
      </div>
    </div>
  </section>

  <!-- Pain Points -->
  <section class="py-20 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          Những vấn đề mà <span class="text-red-500">cửa hàng thiết bị vệ sinh</span> thường gặp
        </h2>
      </div>
      <div class="grid sm:grid-cols-2 gap-6">
        {painPoints.map((point) => (
          <div class="flex items-start gap-4 p-6 bg-red-50 rounded-xl border border-red-100">
            <svg class="w-6 h-6 text-red-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
            <p class="text-gray-700">{point}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Features -->
  <section class="py-20 bg-slate-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <span class="inline-block px-4 py-1 bg-sky-100 text-sky-700 rounded-full text-sm font-medium mb-4">Tính năng chuyên sâu</span>
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          Quản lý thiết bị vệ sinh
          <span class="bg-gradient-to-r from-sky-500 to-indigo-500 bg-clip-text text-transparent">chuyên nghiệp</span>
        </h2>
      </div>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {features.map((feature) => (
          <div class="bg-white rounded-2xl p-8 shadow-sm border border-gray-100 hover:shadow-lg hover:-translate-y-1 transition-all duration-300">
            <div class="w-12 h-12 bg-sky-100 rounded-xl flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-sky-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-2">{feature.title}</h3>
            <p class="text-gray-600 leading-relaxed">{feature.desc}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-20 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="relative bg-gradient-to-br from-sky-500 to-indigo-500 rounded-3xl p-8 md:p-12 overflow-hidden">
        <div class="absolute top-0 right-0 w-64 h-64 bg-white/10 rounded-full -translate-y-1/2 translate-x-1/2"></div>
        <div class="absolute bottom-0 left-0 w-48 h-48 bg-white/10 rounded-full translate-y-1/2 -translate-x-1/2"></div>
        <div class="relative z-10 text-center">
          <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">Bán combo hiệu quả hơn ngay hôm nay</h2>
          <p class="text-lg text-white/90 mb-8 max-w-2xl mx-auto">Dùng thử miễn phí 15 ngày. Đội ngũ kỹ thuật sẽ hỗ trợ cài đặt và đào tạo 1-1.</p>
          <a href="/#dung-thu" class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-sky-600 bg-white rounded-xl hover:bg-gray-100 transition-all duration-300 hover:-translate-y-1 shadow-lg">
            <span class="whitespace-nowrap">Dùng thử miễn phí</span>
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
