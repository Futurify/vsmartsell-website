<script>
  const heroImageFront = document.getElementById('hero-image-front');
  const heroImageBack = document.getElementById('hero-image-back');
  const photoStack = document.getElementById('photo-stack');
  const imageModal = document.getElementById('image-modal');
  const modalImage = document.getElementById('modal-image') as HTMLImageElement;
  const modalClose = document.getElementById('modal-close');

  // Smooth scroll animation for stacked photos (desktop only)
  const scrollContainer = document.getElementById('hero-scroll-container');
  const isDesktop = () => window.innerWidth >= 1024;

  // Current animated values (for smooth interpolation)
  let currentProgress = 0;
  let targetProgress = 0;
  let animationId: number | null = null;

  // Lerp function for smooth interpolation
  const lerp = (start: number, end: number, factor: number) => start + (end - start) * factor;

  const updateAnimation = () => {
    // Skip animation on mobile
    if (!isDesktop()) {
      animationId = null;
      return;
    }

    // Smooth interpolation towards target
    currentProgress = lerp(currentProgress, targetProgress, 0.12);

    // Stop animating if close enough
    if (Math.abs(currentProgress - targetProgress) < 0.001) {
      currentProgress = targetProgress;
    }

    if (heroImageBack && heroImageFront) {
      const p = currentProgress;

      // Back image: moves up and comes to front
      const translateY = -p * 150;
      const translateX = -p * 30;
      const rotate = (1 - p) * 3;
      const scale = 1 + p * 0.05;

      heroImageBack.style.transform = `translate3d(${translateX}px, ${translateY}px, 0) rotate(${rotate}deg) scale(${scale})`;
      heroImageBack.style.zIndex = p > 0.4 ? '25' : '10';

      // Front image: moves down and fades slightly
      const frontTranslateY = p * 80;
      const frontOpacity = 1 - p * 0.3;
      heroImageFront.style.transform = `translate3d(0, ${frontTranslateY}px, 0)`;
      heroImageFront.style.zIndex = p > 0.4 ? '15' : '20';
      heroImageFront.style.opacity = String(frontOpacity);
    }

    // Continue animation loop if not at target
    if (currentProgress !== targetProgress) {
      animationId = requestAnimationFrame(updateAnimation);
    } else {
      animationId = null;
    }
  };

  const handleScroll = () => {
    // Skip on mobile
    if (!isDesktop() || !scrollContainer) return;

    const containerRect = scrollContainer.getBoundingClientRect();
    const containerTop = -containerRect.top;
    const containerHeight = scrollContainer.offsetHeight - window.innerHeight;

    // Set target progress
    targetProgress = Math.min(Math.max(containerTop / containerHeight, 0), 1);

    // Start animation loop if not running
    if (animationId === null) {
      animationId = requestAnimationFrame(updateAnimation);
    }
  };

  window.addEventListener('scroll', handleScroll, { passive: true });
  if (isDesktop()) handleScroll(); // Initial call only on desktop

  // Lightbox functionality
  const openModal = (imageSrc: string) => {
    if (modalImage) modalImage.src = imageSrc;
    imageModal?.classList.remove('hidden');
    imageModal?.classList.add('flex');
    document.body.style.overflow = 'hidden';
  };

  heroImageFront?.addEventListener('click', () => {
    const src = heroImageFront.getAttribute('data-image') || '/images/hero-screenshot.png';
    openModal(src);
  });

  heroImageBack?.addEventListener('click', () => {
    const src = heroImageBack.getAttribute('data-image') || '/images/hero-reports.png';
    openModal(src);
  });

  // Add lightbox to all elements with lightbox-image class
  document.querySelectorAll('.lightbox-image').forEach((el) => {
    el.addEventListener('click', () => {
      const src = el.getAttribute('data-image');
      if (src) openModal(src);
    });
  });

  const closeModal = () => {
    imageModal?.classList.add('hidden');
    imageModal?.classList.remove('flex');
    document.body.style.overflow = '';
  };

  modalClose?.addEventListener('click', closeModal);
  imageModal?.addEventListener('click', (e) => {
    if (e.target === imageModal) closeModal();
  });
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') closeModal();
  });
</script>

