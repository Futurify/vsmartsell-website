---
import BaseLayout from '../layouts/BaseLayout.astro';

const features = [
  {
    title: 'Quy đổi m³ và xe',
    desc: 'Hệ thống tự động quy đổi giữa m³ và xe cho cát, đá. Bán theo xe hay theo m³ đều chính xác, tồn kho luôn khớp.',
  },
  {
    title: 'Quản lý gạch viên theo m³',
    desc: 'Gạch block, gạch ống bán theo viên nhưng quản lý tồn kho theo m³. Hệ thống quy đổi tự động theo kích thước từng loại.',
  },
  {
    title: 'Hàng ngàn mã phụ kiện',
    desc: 'Quản lý chính xác hàng ngàn mã phụ kiện xây dựng: ống nước, dây điện, ốc vít, keo, sơn... Tìm kiếm nhanh, không nhầm lẫn.',
  },
  {
    title: 'Đa đơn vị tính',
    desc: 'Mỗi sản phẩm hỗ trợ nhiều đơn vị: bao, kg, tấn, cây, mét, cuộn. Nhân viên bán theo đơn vị nào cũng được.',
  },
  {
    title: 'Quản lý giao hàng',
    desc: 'Theo dõi đơn giao hàng, xe giao, tuyến đường. Biết rõ hàng đã giao hay chưa, khách đã nhận hay chưa.',
  },
  {
    title: 'Công nợ nhà cung cấp',
    desc: 'Quản lý công nợ hai chiều: nợ khách hàng và nợ nhà cung cấp. Biết rõ dòng tiền ra vào, không bỏ sót khoản nào.',
  },
];

const painPoints = [
  'Bán cát đá theo xe nhưng tồn kho tính theo m³, không biết quy đổi chính xác',
  'Hàng ngàn mã phụ kiện nhỏ, quên cập nhật tồn kho, khách hỏi không biết còn không',
  'Gạch viên bán theo viên, theo m³, theo xe — mỗi khách hỏi một kiểu',
  'Công nợ nhà cung cấp và khách hàng lẫn lộn, không biết thực tế lãi bao nhiêu',
];
---

<BaseLayout
  title="Phần mềm quản lý Vật Liệu Xây Dựng - vSmartSell"
  description="Phần mềm quản lý VLXD: quy đổi m³/xe, quản lý hàng ngàn mã phụ kiện, đa đơn vị tính. Dùng thử miễn phí."
>
  <!-- Hero Section -->
  <section class="relative py-20 lg:py-32 overflow-hidden bg-gradient-to-br from-slate-900 via-blue-900 to-slate-900">
    <div class="absolute inset-0">
      <div class="absolute top-20 left-10 w-72 h-72 bg-amber-500 rounded-full mix-blend-multiply filter blur-3xl opacity-20 animate-pulse"></div>
      <div class="absolute bottom-20 right-10 w-96 h-96 bg-red-500 rounded-full mix-blend-multiply filter blur-3xl opacity-15 animate-pulse" style="animation-delay: 1s;"></div>
    </div>
    <div class="absolute inset-0 bg-[linear-gradient(rgba(255,255,255,0.03)_1px,transparent_1px),linear-gradient(90deg,rgba(255,255,255,0.03)_1px,transparent_1px)] bg-[size:40px_40px]"></div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div class="text-center lg:text-left">
          <span class="inline-block px-4 py-1 bg-amber-500/20 text-amber-300 border border-amber-400/30 rounded-full text-sm font-medium mb-6">Chuyên ngành Vật liệu xây dựng</span>

          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white leading-tight mb-6">
            Quy đổi m³, xe, viên
            <span class="block bg-gradient-to-r from-amber-400 to-red-400 bg-clip-text text-transparent pb-2">
              chính xác tuyệt đối
            </span>
          </h1>

          <p class="text-lg md:text-xl text-slate-300 mb-8 max-w-xl mx-auto lg:mx-0">
            Hệ quy đổi thông minh giữa <strong class="text-white">m³, xe, viên, bao, kg</strong>. Quản lý chính xác hàng ngàn mã phụ kiện xây dựng.
          </p>

          <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
            <a href="/#dung-thu" class="group inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-white bg-gradient-to-r from-amber-500 to-red-500 rounded-xl shadow-lg shadow-amber-500/25 hover:shadow-amber-500/40 transition-all duration-300 hover:-translate-y-1">
              <span class="whitespace-nowrap">Dùng thử miễn phí</span>
              <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
              </svg>
            </a>
            <a href="tel:0866135766" class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-white border-2 border-white/20 rounded-xl hover:bg-white/10 transition-all duration-300">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              Gọi tư vấn
            </a>
          </div>
        </div>

        <div class="relative flex justify-center">
          <img src="/images/industry-vlxd.png" alt="Vật liệu xây dựng" class="rounded-2xl shadow-2xl max-h-[400px] object-cover" />
        </div>
      </div>
    </div>
  </section>

  <!-- Pain Points -->
  <section class="py-20 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          Những vấn đề mà <span class="text-red-500">cửa hàng VLXD</span> thường gặp
        </h2>
      </div>
      <div class="grid sm:grid-cols-2 gap-6">
        {painPoints.map((point) => (
          <div class="flex items-start gap-4 p-6 bg-red-50 rounded-xl border border-red-100">
            <svg class="w-6 h-6 text-red-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
            <p class="text-gray-700">{point}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Features -->
  <section class="py-20 bg-slate-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <span class="inline-block px-4 py-1 bg-amber-100 text-amber-700 rounded-full text-sm font-medium mb-4">Tính năng chuyên sâu</span>
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          Quản lý VLXD
          <span class="bg-gradient-to-r from-amber-500 to-red-500 bg-clip-text text-transparent">không còn đau đầu</span>
        </h2>
      </div>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {features.map((feature) => (
          <div class="bg-white rounded-2xl p-8 shadow-sm border border-gray-100 hover:shadow-lg hover:-translate-y-1 transition-all duration-300">
            <div class="w-12 h-12 bg-amber-100 rounded-xl flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-2">{feature.title}</h3>
            <p class="text-gray-600 leading-relaxed">{feature.desc}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-20 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="relative bg-gradient-to-br from-amber-500 to-red-500 rounded-3xl p-8 md:p-12 overflow-hidden">
        <div class="absolute top-0 right-0 w-64 h-64 bg-white/10 rounded-full -translate-y-1/2 translate-x-1/2"></div>
        <div class="absolute bottom-0 left-0 w-48 h-48 bg-white/10 rounded-full translate-y-1/2 -translate-x-1/2"></div>
        <div class="relative z-10 text-center">
          <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">Quản lý cửa hàng VLXD hiệu quả hơn</h2>
          <p class="text-lg text-white/90 mb-8 max-w-2xl mx-auto">Dùng thử miễn phí 15 ngày. Đội ngũ kỹ thuật sẽ hỗ trợ cài đặt và đào tạo 1-1.</p>
          <a href="/#dung-thu" class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-amber-600 bg-white rounded-xl hover:bg-gray-100 transition-all duration-300 hover:-translate-y-1 shadow-lg">
            <span class="whitespace-nowrap">Dùng thử miễn phí</span>
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
