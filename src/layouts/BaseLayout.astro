---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
  keywords?: string;
  article?: boolean;
  publishedTime?: string;
}

const {
  title,
  description = 'Phần mềm quản lý Tôn, Sắt Thép, Gạch men, Vật liệu xây dựng. Bán hàng nhanh, quản lý tồn kho nhiều đơn vị. DÙNG THỬ MIỄN PHÍ 15 NGÀY.',
  ogImage = '/images/og-image.png',
  keywords = 'phần mềm quản lý bán hàng, phần mềm VLXD, quản lý tôn sắt thép, quản lý gạch men, phần mềm vật liệu xây dựng, vSmartSell',
  article = false,
  publishedTime
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const ogImageURL = ogImage.startsWith('http') ? ogImage : new URL(ogImage, Astro.site).href;

// Organization structured data
const organizationSchema = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "vSmartSell",
  "alternateName": "Phần mềm quản lý bán hàng vSmartSell",
  "url": "https://vsmartsell.com",
  "logo": "https://vsmartsell.com/images/logo.png",
  "contactPoint": {
    "@type": "ContactPoint",
    "telephone": "+84-866-135-766",
    "contactType": "sales",
    "areaServed": "VN",
    "availableLanguage": "Vietnamese"
  },
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "Tòa nhà TS - Số 17 Đường Số 2",
    "addressLocality": "Phường Bàn Cờ",
    "addressRegion": "TP. Hồ Chí Minh",
    "addressCountry": "VN"
  },
  "sameAs": [
    "https://www.facebook.com/vsmartsell",
    "https://www.youtube.com/@vsmartsell"
  ]
};

// Website structured data
const websiteSchema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "vSmartSell",
  "url": "https://vsmartsell.com",
  "potentialAction": {
    "@type": "SearchAction",
    "target": "https://vsmartsell.com/blog?q={search_term_string}",
    "query-input": "required name=search_term_string"
  }
};

// Software Application structured data
const softwareSchema = {
  "@context": "https://schema.org",
  "@type": "SoftwareApplication",
  "name": "vSmartSell",
  "applicationCategory": "BusinessApplication",
  "operatingSystem": "Windows, Android, iOS, Web",
  "offers": {
    "@type": "Offer",
    "price": "800000",
    "priceCurrency": "VND",
    "priceValidUntil": "2026-12-31"
  },
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": "4.8",
    "ratingCount": "500"
  }
};
---

<!doctype html>
<html lang="vi">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon.png" />
    <link rel="apple-touch-icon" href="/favicon.png" />
    <link rel="shortcut icon" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />

    <!-- Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-6LB8EMQTR3"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-6LB8EMQTR3', {
        // Enhanced data collection
        send_page_view: true,
        cookie_flags: 'SameSite=None;Secure',
        // Custom dimensions
        custom_map: {
          dimension1: 'page_type',
          dimension2: 'traffic_source',
          dimension3: 'user_segment'
        }
      });

      // Detect page type
      var path = window.location.pathname;
      var pageType = 'other';
      if (path === '/') pageType = 'homepage';
      else if (path.startsWith('/nganh-')) pageType = 'industry';
      else if (path.startsWith('/blog')) pageType = 'blog';
      else if (path === '/phi-dich-vu') pageType = 'pricing';
      else if (path === '/ai-bao-cao') pageType = 'ai_product';
      else if (path === '/ve-vsmartsell') pageType = 'about';
      else if (path.startsWith('/cong-tac-vien') || path.startsWith('/gioi-thieu-khach-hang')) pageType = 'partnership';

      // Set user properties
      gtag('set', 'user_properties', {
        page_type: pageType,
        site_language: 'vi',
        site_version: 'astro'
      });

      // Track page type as event for segmentation
      gtag('event', 'page_classified', {
        page_type: pageType,
        page_path: path
      });

      // Track traffic source
      var urlParams = new URLSearchParams(window.location.search);
      var utmSource = urlParams.get('utm_source');
      var utmMedium = urlParams.get('utm_medium');
      var utmCampaign = urlParams.get('utm_campaign');
      if (utmSource) {
        gtag('event', 'campaign_visit', {
          traffic_source: utmSource,
          traffic_medium: utmMedium || '(not set)',
          traffic_campaign: utmCampaign || '(not set)'
        });
      }

      // Track returning vs new visitor
      var isReturning = localStorage.getItem('vsmartsell_visited');
      gtag('event', 'visitor_type', {
        user_segment: isReturning ? 'returning' : 'new',
        visit_count: parseInt(localStorage.getItem('vsmartsell_visits') || '0') + 1
      });
      localStorage.setItem('vsmartsell_visited', 'true');
      localStorage.setItem('vsmartsell_visits', parseInt(localStorage.getItem('vsmartsell_visits') || '0') + 1);

      // Track form submission success from redirect
      if (urlParams.get('submitted') === 'true') {
        gtag('event', 'conversion', {
          send_to: 'G-6LB8EMQTR3',
          event_category: 'conversion',
          event_label: 'form_success'
        });
      }
    </script>

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="author" content="vSmartSell" />
    <meta name="robots" content="index, follow" />
    <meta name="googlebot" content="index, follow" />
    <link rel="canonical" href={canonicalURL} />

    <!-- Geo Meta Tags for Vietnam -->
    <meta name="geo.region" content="VN-SG" />
    <meta name="geo.placename" content="Ho Chi Minh City" />
    <meta name="language" content="Vietnamese" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={article ? "article" : "website"} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImageURL} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:locale" content="vi_VN" />
    <meta property="og:site_name" content="vSmartSell" />
    {article && publishedTime && (
      <meta property="article:published_time" content={publishedTime} />
    )}

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageURL} />

    <!-- Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify(organizationSchema)} />
    <script type="application/ld+json" set:html={JSON.stringify(websiteSchema)} />
    <script type="application/ld+json" set:html={JSON.stringify(softwareSchema)} />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet" />

    <!-- Preload critical assets -->
    <link rel="preload" href="/images/logo.png" as="image" />
  </head>
  <body class="min-h-screen flex flex-col">
    <Header />
    <main class="flex-grow">
      <slot />
    </main>
    <Footer />

    <!-- Zalo Chat Widget -->
    <div class="zalo-chat-widget"
      data-oaid="267239898554447383"
      data-welcome-message="Xin chào! Cảm ơn bạn đã quan tâm đến vSmartSell. Chúng tôi có thể giúp gì cho bạn?"
      data-autopopup="0"
      data-width="350"
      data-height="420">
    </div>
    <script is:inline src="https://sp.zalo.me/plugins/sdk.js"></script>

    <!-- GA Funnel Event Tracking -->
    <script is:inline>
    (function() {
      function track(event, params) {
        if (typeof gtag === 'function') gtag('event', event, params);
      }

      // 1. CTA button clicks (Dùng thử, Đăng ký, etc.)
      document.querySelectorAll('a[href*="dung-thu"], a[href*="/#dung-thu"]').forEach(function(el) {
        el.addEventListener('click', function() {
          track('cta_click', {
            event_category: 'conversion',
            event_label: el.textContent.trim(),
            link_url: el.href
          });
        });
      });

      // 2. Phone call clicks
      document.querySelectorAll('a[href^="tel:"]').forEach(function(el) {
        el.addEventListener('click', function() {
          track('phone_click', {
            event_category: 'conversion',
            event_label: el.textContent.trim(),
            phone_number: el.href.replace('tel:', '')
          });
        });
      });

      // 3. Navigation clicks (track which pages/industries interest users)
      document.querySelectorAll('nav a[href]').forEach(function(el) {
        el.addEventListener('click', function() {
          track('nav_click', {
            event_category: 'navigation',
            event_label: el.textContent.trim(),
            link_url: el.href
          });
        });
      });

      // 4. Scroll depth tracking (25%, 50%, 75%, 100%)
      var scrollMarks = { 25: false, 50: false, 75: false, 100: false };
      window.addEventListener('scroll', function() {
        var scrollPercent = Math.round(
          (window.scrollY / (document.documentElement.scrollHeight - window.innerHeight)) * 100
        );
        [25, 50, 75, 100].forEach(function(mark) {
          if (scrollPercent >= mark && !scrollMarks[mark]) {
            scrollMarks[mark] = true;
            track('scroll_depth', {
              event_category: 'engagement',
              event_label: mark + '%',
              value: mark
            });
          }
        });
      }, { passive: true });

      // 5. Industry page card clicks (from homepage)
      document.querySelectorAll('a[href*="nganh-"]').forEach(function(el) {
        el.addEventListener('click', function() {
          track('industry_click', {
            event_category: 'engagement',
            event_label: el.textContent.trim(),
            link_url: el.href
          });
        });
      });

      // 6. Lightbox image views
      document.querySelectorAll('.lightbox-image, [id*="hero-image"]').forEach(function(el) {
        el.addEventListener('click', function() {
          track('image_view', {
            event_category: 'engagement',
            event_label: el.getAttribute('data-image') || 'hero-image'
          });
        });
      });

      // 7. Time on page (30s, 60s, 120s, 300s)
      [30, 60, 120, 300].forEach(function(seconds) {
        setTimeout(function() {
          track('time_on_page', {
            event_category: 'engagement',
            event_label: seconds + 's',
            value: seconds
          });
        }, seconds * 1000);
      });
    })();
    </script>
  </body>
</html>
